            </TabItem>
            <TabItem Header="Магазины">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGrid2" HorizontalAlignment="Left" Height="391" VerticalAlignment="Top" Width="786"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
